<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.2.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_2_0.dtd">

<service-builder package-path="com.liferay.yithro.rules">
	<namespace>Yithro</namespace>
	<entity local-service="true" name="Action" remote-service="false">
		<!-- PK fields -->

		<column name="actionId" primary="true" type="long" />

		<!-- Other fields -->

		<column name="ruleId" type="long" />
		<column name="name" type="String" />
		<column name="value" type="String" />
	</entity>
	<entity local-service="true" name="Expression" remote-service="false">

		<!-- PK fields -->

		<column name="expressionId" primary="true" type="long" />

		<!-- Other fields -->

		<column name="ruleId" type="long" />
		<column name="type" type="String" />
		<column name="field" type="String" />
		<column name="operation" type="String" />
		<column name="value" type="String" />

		<!-- Finder methods -->

		<finder name="RuleId" return-type="Collection">
			<finder-column name="ruleId" />
		</finder>
		<finder name="R_T" return-type="Collection">
			<finder-column name="ruleId" />
			<finder-column name="type" />
		</finder>
	</entity>
	<entity local-service="true" name="Rule" remote-service="false">

		<!-- PK fields -->

		<column name="ruleId" primary="true" type="long" />

		<!-- Other fields -->

		<column name="name" type="String" />
		<column name="triggerAction" type="String" />
		<column name="triggerObject" type="String" />
	</entity>
	<exceptions>
		<exception>RuleName</exception>
	</exceptions>
</service-builder>